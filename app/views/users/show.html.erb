<!DOCTYPE html>
<html>

<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale-1">
  <script src="https://kit.fontawesome.com/f7511da386.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if @user&.profile_image&.attached? %>
        <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <th>name</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>

        <% if @user == current_user %>
        <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
        <% end %>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle" %>
                <% end %>
                <% else %>
                <%= link_to user_path(book.user) do %>
                <%= image_tag 'no_image', size: "100x100", class: "rounded-circle" %>
                <% end %>
                <% end %>
                <br>
                <%= link_to book.user.name, user_path(book.user) %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>